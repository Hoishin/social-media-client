{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "panda codegen && run-p --race dev:*",
		"dev:types": "tsc --noEmit --watch --preserveWatchOutput",
		"dev:server": "onchange -ik src/server -- tsx --env-file=.env.local src/server/main.ts",
		"build": "panda codegen && run-s build:*",
		"build:types": "tsc --noEmit",
		"build:remix": "remix vite:build",
		"build:server": "esbuild src/server/main.ts --bundle --format=esm --sourcemap --platform=node --target=node20 --outdir=out --packages=external --external:./build/server/index.js"
	},
	"dependencies": {
		"@fastify/helmet": "^11.1.1",
		"@fastify/static": "^7.0.1",
		"@mcansh/remix-fastify": "^3.2.2",
		"@prisma/client": "^5.10.2",
		"@radix-ui/themes": "^3.0.1",
		"@remix-run/node": "^2.8.0",
		"@remix-run/react": "^2.8.0",
		"fastify": "^4.26.1",
		"isbot": "^5.1.1",
		"ky": "^1.2.1",
		"modern-normalize": "^2.0.0",
		"puppeteer": "^22.3.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"twitter-text": "^3.1.0",
		"zod": "^3.22.4",
		"zod-form-data": "^2.0.2",
		"zustand": "^4.5.1"
	},
	"devDependencies": {
		"@fastify/middie": "^8.3.0",
		"@pandacss/dev": "^0.36.1",
		"@remix-run/dev": "^2.8.0",
		"@types/node": "^20.11.22",
		"@types/react": "^18.2.60",
		"@types/react-dom": "^18.2.19",
		"@types/twitter-text": "^3.1.10",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"npm-run-all2": "^6.1.2",
		"onchange": "^7.1.0",
		"prisma": "^5.10.2",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3",
		"vite": "^5.1.4"
	}
}
